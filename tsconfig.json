  
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "src/**/*.test.tsx",
    "src/**/*.story.tsx",
    "test/**/*"
  ]
}